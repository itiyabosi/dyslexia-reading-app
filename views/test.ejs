<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>読み上げテスト - <%= child.name %></title>
  <link rel="stylesheet" href="/css/style.css">

  <!-- Google Fonts: UDフォント -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=BIZ+UDPGothic&family=BIZ+UDPMincho&family=Lexend:wght@400&display=swap" rel="stylesheet">

  <!-- OpenDyslexic フォント -->
  <link href="https://cdn.jsdelivr.net/npm/opendyslexic@3.0.0/opendyslexic-regular.min.css" rel="stylesheet">

  <style>
    /* カスタムフォントの@font-face定義 */
    <% fonts.filter(f => f.font_type === 'custom').forEach(font => {
      // font_familyから最初のフォント名を抽出（シングルクォートを除去）
      const fontName = font.font_family.split(',')[0].replace(/['"]/g, '').trim();
    %>
    @font-face {
      font-family: '<%= fontName %>';
      src: url('<%= font.file_path %>');
    }
    <% }); %>

    /* ページ全体にフォントを適用 */
    body {
      font-family: inherit !important;
    }

    /* 単語表示エリアに強制的にフォントを適用 */
    #wordDisplay {
      font-family: inherit !important;
    }
  </style>
</head>
<body>
  <header>
    <h1>読み上げテスト</h1>
    <div style="position: absolute; top: 10px; right: 20px; font-size: 12px; color: rgba(255,255,255,0.7);">
      <%= commitHash %>
    </div>
  </header>

  <div class="container">
    <div class="alert alert-info">
      <strong>児童:</strong> <%= child.name %>
      <strong style="margin-left: 20px;">単語リスト:</strong> <%= wordList.name %>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin-bottom: 20px;">
      <div class="form-group">
        <label for="fontSelect">表示フォント</label>
        <select id="fontSelect" style="font-size: 16px; padding: 8px; width: 100%;">
          <% fonts.forEach((font, index) => { %>
            <option value="<%= font.id %>" data-family="<%= font.font_family %>" style="font-family: <%= font.font_family %>;" <%= index === 0 ? 'selected' : '' %>>
              <%= font.name %> (<%= font.font_type === 'webfont' ? 'Webフォント' : font.font_type === 'custom' ? 'カスタム' : 'システム' %>)
            </option>
          <% }); %>
        </select>
      </div>

      <div class="form-group">
        <label for="bgColorSelect">背景色</label>
        <select id="bgColorSelect" style="font-size: 16px; padding: 8px; width: 100%;">
          <option value="#fff9e6" selected>クリーム（デフォルト）</option>
          <option value="#ffffff">白</option>
          <option value="#ffe6e6">淡いピンク</option>
          <option value="#e6f3ff">淡いブルー</option>
          <option value="#e6ffe6">淡いグリーン</option>
          <option value="#fff0cc">淡いイエロー</option>
          <option value="#f0f0f0">ライトグレー</option>
          <option value="#ffe6f0">淡いローズ</option>
          <option value="#e6f0ff">淡いスカイブルー</option>
        </select>
      </div>

      <div class="form-group">
        <label for="letterSpacing">文字間隔: <span id="letterSpacingValue">0</span>px</label>
        <input type="range" id="letterSpacing" min="0" max="30" value="0" step="1" style="width: 100%;">
      </div>
    </div>

    <div id="fontPreview" style="margin-top: 10px; padding: 15px; background-color: #f0f0f0; border-radius: 5px; font-size: 24px; text-align: center; display: none;">
      あいうえお ABC 123
    </div>

    <div class="progress-info">
      <span id="currentIndex">0</span> / <%= words.length %> 語
    </div>

    <div style="text-align: center; margin-bottom: 10px;">
      <small style="color: #666;">
        ⌨️ キーボードショートカット: <strong>スペースキー</strong> でスタート/ストップ、<strong>Enter</strong> で記録
      </small>
    </div>

    <div id="testArea">
      <div class="test-word" id="wordDisplay">
        準備中...
      </div>

      <div class="timer" id="timer">0.00秒</div>

      <div class="test-controls">
        <button id="startBtn" class="btn btn-success btn-large">スタート (スペースキー)</button>
        <button id="stopBtn" class="btn btn-primary btn-large" style="display: none;">ストップ (スペースキー)</button>
      </div>

      <div class="result-form" id="resultForm" style="display: none;">
        <h3>結果を記録</h3>

        <div class="form-group">
          <label>読めましたか？ *</label>
          <div class="radio-group">
            <label>
              <input type="radio" name="could_read" value="1" checked>
              読めた
            </label>
            <label>
              <input type="radio" name="could_read" value="0">
              読めなかった
            </label>
          </div>
        </div>

        <div class="form-group" id="misreadGroup" style="display: none;">
          <label for="misread_as">読み間違えた内容</label>
          <input type="text" id="misread_as" placeholder="例: あま">
        </div>

        <div class="form-group">
          <label for="notes">備考</label>
          <textarea id="notes" rows="2"></textarea>
        </div>

        <div style="display: flex; gap: 10px; justify-content: center;">
          <button id="saveBtn" class="btn btn-success btn-large">記録して次へ (Enter)</button>
          <button id="skipBtn" class="btn btn-secondary">スキップ</button>
        </div>
      </div>
    </div>

    <div id="completeArea" style="display: none; text-align: center;">
      <h2 style="color: #4CAF50; margin-bottom: 20px;">テスト完了！</h2>
      <p style="font-size: 18px; margin-bottom: 30px;">すべての単語のテストが終了しました。</p>
      <a href="/" class="btn btn-primary btn-large">ホームに戻る</a>
      <a href="/analysis" class="btn btn-success btn-large">データを見る</a>
    </div>
  </div>

  <script>
    const childId = <%= child.id %>;
    const words = <%- JSON.stringify(words) %>;

    let currentIndex = 0;
    let startTime = null;
    let timerInterval = null;
    let currentReadingTime = 0;
    let selectedFontId = null;
    let selectedBgColor = '#fff9e6';
    let selectedLetterSpacing = 0;

    const wordDisplay = document.getElementById('wordDisplay');
    const timer = document.getElementById('timer');
    const startBtn = document.getElementById('startBtn');
    const stopBtn = document.getElementById('stopBtn');
    const resultForm = document.getElementById('resultForm');
    const testArea = document.getElementById('testArea');
    const completeArea = document.getElementById('completeArea');
    const currentIndexDisplay = document.getElementById('currentIndex');
    const fontSelect = document.getElementById('fontSelect');
    const bgColorSelect = document.getElementById('bgColorSelect');
    const letterSpacingSlider = document.getElementById('letterSpacing');
    const letterSpacingValue = document.getElementById('letterSpacingValue');

    const fontPreview = document.getElementById('fontPreview');

    // フォント選択の変更を反映
    fontSelect.addEventListener('change', (e) => {
      console.log('[DEBUG] フォント変更:', e.target.value);
      const selectedOption = e.target.options[e.target.selectedIndex];
      const fontFamily = selectedOption.getAttribute('data-family');
      selectedFontId = parseInt(e.target.value);

      // フォントを適用
      applyFont(fontFamily);

      // プレビュー表示
      showFontPreview(fontFamily);
    });

    // 背景色の変更を反映
    bgColorSelect.addEventListener('change', (e) => {
      selectedBgColor = e.target.value;
      console.log('[DEBUG] 背景色変更:', selectedBgColor);
      applyBackgroundColor(selectedBgColor);
    });

    // 文字間隔の変更を反映
    letterSpacingSlider.addEventListener('input', (e) => {
      selectedLetterSpacing = parseInt(e.target.value);
      letterSpacingValue.textContent = selectedLetterSpacing;
      console.log('[DEBUG] 文字間隔変更:', selectedLetterSpacing + 'px');
      applyLetterSpacing(selectedLetterSpacing);
    });

    // フォントを適用する関数
    function applyFont(fontFamily) {
      // データベースから来たfont_familyにはシングルクォートが含まれているので除去
      // 例: "'BIZ UDPGothic', sans-serif" → "BIZ UDPGothic, sans-serif"
      const cleanedFontFamily = fontFamily.replace(/'/g, '');

      console.log('[DEBUG] 元のfontFamily:', fontFamily);
      console.log('[DEBUG] クリーン後のfontFamily:', cleanedFontFamily);

      // 既存の動的スタイルを削除
      const existingStyle = document.getElementById('dynamic-font-style');
      if (existingStyle) {
        existingStyle.remove();
      }

      // 新しいstyleタグを作成して、すべての要素に!importantで適用
      const styleTag = document.createElement('style');
      styleTag.id = 'dynamic-font-style';
      styleTag.innerHTML = `
        body,
        body *,
        input,
        button,
        select,
        textarea,
        label,
        h1, h2, h3, h4, h5, h6,
        p, span, div, a {
          font-family: ${cleanedFontFamily} !important;
        }
      `;
      document.head.appendChild(styleTag);

      console.log('[DEBUG] フォント適用（全体・!important）:', cleanedFontFamily);

      // 確認用
      setTimeout(() => {
        console.log('[DEBUG] Body fontFamily:', window.getComputedStyle(document.body).fontFamily);
        console.log('[DEBUG] WordDisplay fontFamily:', window.getComputedStyle(wordDisplay).fontFamily);
      }, 50);
    }

    // フォントプレビューを表示
    function showFontPreview(fontFamily) {
      const cleanedFontFamily = fontFamily.replace(/'/g, '');
      fontPreview.style.fontFamily = cleanedFontFamily;
      fontPreview.style.display = 'block';

      // 3秒後に自動で非表示
      setTimeout(() => {
        fontPreview.style.display = 'none';
      }, 3000);
    }

    // 背景色を適用する関数
    function applyBackgroundColor(bgColor) {
      wordDisplay.style.backgroundColor = bgColor;
      console.log('[DEBUG] 背景色適用:', bgColor);
    }

    // 文字間隔を適用する関数
    function applyLetterSpacing(spacing) {
      wordDisplay.style.letterSpacing = spacing + 'px';
      console.log('[DEBUG] 文字間隔適用:', spacing + 'px');
    }

    // 初期フォント設定
    const initialOption = fontSelect.options[fontSelect.selectedIndex];
    selectedFontId = parseInt(fontSelect.value);
    applyFont(initialOption.getAttribute('data-family'));

    // 初期背景色と文字間隔を適用
    applyBackgroundColor(selectedBgColor);
    applyLetterSpacing(selectedLetterSpacing);

    // ラジオボタンの変更を監視
    document.querySelectorAll('input[name="could_read"]').forEach(radio => {
      radio.addEventListener('change', (e) => {
        const misreadGroup = document.getElementById('misreadGroup');
        if (e.target.value === '0') {
          misreadGroup.style.display = 'block';
        } else {
          misreadGroup.style.display = 'none';
          document.getElementById('misread_as').value = '';
        }
      });
    });

    function showCurrentWord() {
      if (currentIndex >= words.length) {
        testArea.style.display = 'none';
        completeArea.style.display = 'block';
        return;
      }

      currentIndexDisplay.textContent = currentIndex + 1;

      // 単語を隠して準備状態にする
      wordDisplay.textContent = '';
      wordDisplay.style.color = '#999';

      console.log('[DEBUG] 次の単語:', words[currentIndex].word_text);

      // リセット
      timer.textContent = '0.00秒';
      startBtn.style.display = 'inline-block';
      stopBtn.style.display = 'none';
      resultForm.style.display = 'none';
      document.getElementById('misread_as').value = '';
      document.getElementById('notes').value = '';
      document.querySelectorAll('input[name="could_read"]')[0].checked = true;
      document.getElementById('misreadGroup').style.display = 'none';
    }

    startBtn.addEventListener('click', () => {
      console.log('[DEBUG] スタートボタン押下 - 単語表示とタイマー開始');

      // 単語を表示
      const word = words[currentIndex];
      wordDisplay.textContent = word.word_text;
      wordDisplay.style.color = '#333';

      console.log('[DEBUG] 単語表示:', word.word_text);

      // タイマー開始
      startTime = Date.now();
      startBtn.style.display = 'none';
      stopBtn.style.display = 'inline-block';

      timerInterval = setInterval(() => {
        const elapsed = (Date.now() - startTime) / 1000;
        timer.textContent = elapsed.toFixed(2) + '秒';
      }, 10);
    });

    stopBtn.addEventListener('click', () => {
      clearInterval(timerInterval);
      currentReadingTime = (Date.now() - startTime) / 1000;
      timer.textContent = currentReadingTime.toFixed(2) + '秒';

      stopBtn.style.display = 'none';
      resultForm.style.display = 'block';
    });

    document.getElementById('saveBtn').addEventListener('click', async () => {
      const couldRead = document.querySelector('input[name="could_read"]:checked').value;
      const misreadAs = couldRead === '0' ? document.getElementById('misread_as').value : null;
      const notes = document.getElementById('notes').value;

      const data = {
        child_id: childId,
        word_id: words[currentIndex].id,
        could_read: parseInt(couldRead),
        reading_time_seconds: currentReadingTime,
        misread_as: misreadAs,
        notes: notes,
        font_id: selectedFontId
      };

      console.log('[DEBUG] テスト結果送信:', data);

      const response = await fetch('/api/reading-records', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        console.log('[SUCCESS] テスト結果記録完了');
        currentIndex++;
        showCurrentWord();
      } else {
        console.error('[ERROR] テスト結果記録失敗');
        alert('記録に失敗しました');
      }
    });

    document.getElementById('skipBtn').addEventListener('click', () => {
      if (confirm('この単語をスキップしますか？（記録されません）')) {
        currentIndex++;
        showCurrentWord();
      }
    });

    // キーボードショートカット
    document.addEventListener('keydown', (e) => {
      console.log('[DEBUG] キー押下:', e.key, 'スタート表示:', startBtn.style.display, 'ストップ表示:', stopBtn.style.display);

      // スペースキー: スタート/ストップ切り替え
      if (e.key === ' ' || e.code === 'Space') {
        e.preventDefault(); // スクロール防止

        if (startBtn.style.display !== 'none') {
          // スタートボタンが表示されている場合
          console.log('[DEBUG] スペースキーでスタート');
          startBtn.click();
        } else if (stopBtn.style.display !== 'none') {
          // ストップボタンが表示されている場合
          console.log('[DEBUG] スペースキーでストップ');
          stopBtn.click();
        }
      }

      // Enterキー: 結果フォームが表示されている場合は保存
      if (e.key === 'Enter' && resultForm.style.display !== 'none') {
        e.preventDefault();
        const saveBtn = document.getElementById('saveBtn');
        if (saveBtn) {
          console.log('[DEBUG] Enterキーで保存');
          saveBtn.click();
        }
      }

      // mキー: 「読めた」を選択して記録
      if ((e.key === 'm' || e.key === 'M') && resultForm.style.display !== 'none') {
        e.preventDefault();
        console.log('[DEBUG] mキーで「読めた」を選択して保存');
        // 「読めた」ラジオボタンを選択
        const couldReadRadio = document.querySelector('input[name="could_read"][value="1"]');
        if (couldReadRadio) {
          couldReadRadio.checked = true;
          couldReadRadio.dispatchEvent(new Event('change')); // changeイベントを発火
        }
        // 保存ボタンをクリック
        const saveBtn = document.getElementById('saveBtn');
        if (saveBtn) {
          saveBtn.click();
        }
      }

      // xキー: 「読めなかった」を選択して記録
      if ((e.key === 'x' || e.key === 'X') && resultForm.style.display !== 'none') {
        e.preventDefault();
        console.log('[DEBUG] xキーで「読めなかった」を選択して保存');
        // 「読めなかった」ラジオボタンを選択
        const couldNotReadRadio = document.querySelector('input[name="could_read"][value="0"]');
        if (couldNotReadRadio) {
          couldNotReadRadio.checked = true;
          couldNotReadRadio.dispatchEvent(new Event('change')); // changeイベントを発火
        }
        // 保存ボタンをクリック
        const saveBtn = document.getElementById('saveBtn');
        if (saveBtn) {
          saveBtn.click();
        }
      }
    });

    // 初期表示
    showCurrentWord();
  </script>
</body>
</html>
